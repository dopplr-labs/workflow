datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  salt         String
  name         String
  profileImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  issues       Issue[]
}

model Issue {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      IssueStatus
  priority    IssuePriority
  estimate    IssueEstimate
  user        User  @relation(fields: [createdBy], references: [id])
  createdBy   String
}

enum IssueStatus {
  BACKLOG
  TODO
  INPROGRESS
  INREVIEW
  DONE
  CANCELLED
}

enum IssuePriority {
  NONE
  URGENT
  HIGH
  MEDIUM
  LOW
}

enum IssueEstimate {
  NONE
  XS
  S
  M
  L
  XL
}
